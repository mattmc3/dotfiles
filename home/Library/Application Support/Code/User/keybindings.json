// Place your key bindings in this file to overwrite the defaults
[
    { "key": "shift+cmd+t",          "command": "workbench.action.tasks.test" },
    { "key": "shift+cmd+r",          "command": "workbench.action.tasks.runTask" },

    // match Sublime
    { "key": "shift+cmd+l",          "command": "editor.action.insertCursorAtEndOfEachLineSelected",
                                     "when": "editorTextFocus" },

    // "editor.action.insertCursorAtEndOfEachLineSelected" was shift+alt+i, so have to do this to swap
    { "key": "shift+alt+i",          "command": "editor.action.selectHighlights",
                                     "when": "editorFocus" },


    // task / todo
    { "key": "ctrl+i",                 "command": "editor.action.toggleRenderWhitespace",
                                       "when": "editorTextFocus" },

    // task / todo
    { "key": "ctrl+c",                 "command": "task.cancel",
                                        "when": "editorTextFocus" }
    // { "key": "cmd+d",                 "command": "task.complete",
    //                                     "when": "editorTextFocus" }
]
