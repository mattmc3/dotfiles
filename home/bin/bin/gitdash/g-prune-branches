#!/usr/bin/env bash

_g-prune-branches() {
	local curbranch=$(git rev-parse --abbrev-ref HEAD)
	if [[ $curbranch != 'master' ]]; then
		>&2 echo "This command requires you to be on the master branch."
		>&2 echo "please run: git checkout master"
		return 1
	fi
	git fetch -p && git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -d
}
_g-prune-branches
