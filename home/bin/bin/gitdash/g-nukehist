#!/usr/bin/env sh

# http://stackoverflow.com/questions/13716658/how-to-delete-all-commit-history-in-github

echo "If you want to delete history, run the following commands:"
echo ""
echo "# checkout"
echo "git checkout --orphan latest_branch"
echo ""
echo "# add all the files"
echo "git add -A"
echo ""
echo "# commit the changes"
echo "git commit -am \"initial commit\""
echo ""
echo "# delete the branch"
echo "git branch -D main"
echo ""
echo "# rename the current branch to main"
echo "git branch -m main"
echo ""
echo "# finally, force update your repository"
echo "git push -f origin main"
