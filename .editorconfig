root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[{makefile,Makefile,MAKEFILE}]
indent_style = tab
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.fish]
indent_size = 4

[*.{py,xsh}]
indent_size = 4

[*.{todo,taskpaper}]
indent_style = tab

[*.txt]
indent_style = tab
indent_size = 4
