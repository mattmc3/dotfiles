# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[{makefile,Makefile,MAKEFILE}]
indent_style = tab

[**/bin/*]
indent_style = space
indent_size = 2

[*.{md,markdown}]
# don't trim end spacing because Markdown uses that
indent_style = space
trim_trailing_whitespace = false

[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

[dot-*]
indent_style = space
indent_size = 2

[.bash*]
indent_style = space
indent_size = 2

[*.fish]
indent_style = space
indent_size = 4

[*.{py,xsh}]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4

[*.{vim,spacemacs}]
indent_style = space

[*.{todo,taskpaper}]
indent_style = tab
