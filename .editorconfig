# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[{makefile,Makefile,MAKEFILE}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
indent_size = 4

[*.{md,markdown}]
# Don't trim end spacing because unfortunately Markdown uses that
trim_trailing_whitespace = false

[gitconfig]
indent_style = tab
