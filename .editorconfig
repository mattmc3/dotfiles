# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[{makefile,Makefile,MAKEFILE}]
indent_style = tab

[*.{md,markdown}]
# Don't trim end spacing because unfortunately Markdown uses that
indent_style = space
trim_trailing_whitespace = false

[bin/bin/*]
indent_style = space
indent_size = 2

[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

[.bash*]
indent_style = space
indent_size = 2

[.{zsh*,zlogin}]
indent_style = space
indent_size = 2

[*.fish]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4

[*.{vim,spacemacs}]
indent_style = space

[*.{todo,taskpaper}]
indent_style = tab
