#!/usr/bin/env zsh
DOTFILES=${DOTFILES:-$HOME/.config/dotfiles}

if [[ ! -d $DOTFILES ]]; then
  git clone --recursive git@github.com:mattmc3/dotfiles.git $DOTFILES
fi

cd $DOTFILES
stow $@ --verbose --dotfiles --target=$HOME/.config config 2>&1 | grep -v 'Absolute/relative mismatch'
stow $@ --verbose --dotfiles --target=$HOME bash 2>&1 | grep -v 'Absolute/relative mismatch'
stow $@ --verbose --dotfiles --target=$HOME bin 2>&1 | grep -v 'Absolute/relative mismatch'
stow $@ --verbose --dotfiles --target=$HOME vim 2>&1 | grep -v 'Absolute/relative mismatch'
stow $@ --verbose --dotfiles --target=$HOME zsh 2>&1 | grep -v 'Absolute/relative mismatch'
