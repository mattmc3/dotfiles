#!/bin/zsh
# zsh_unplugged
local plugdir
ZPLUGINDIR=${ZPLUGINDIR:-${ZDOTDIR:-$HOME/.config/zsh}/plugins}
for plugdir in $@; do
  [[ $plugdir = /* ]] || plugdir=$ZPLUGINDIR/$plugdir
  fpath+=$plugdir
  local initfile=$plugdir/${plugdir:t}.plugin.zsh
  (( $+functions[zsh-defer] )) && zsh-defer . $initfile || . $initfile
done
