#!/usr/bin/env zsh
0=${(%):-%N}
setopt extended_glob
cd $0:A:h:h

# generate string.zsh
awk '
  BEGIN{ print "#!/usr/bin/env zsh"; skip=-1 }
  /^#string.plugin.zsh/ { skip=1; print "" }
  /^```$/ { skip=-1 }
  skip==0{ print $0 }
  skip>0{ skip-=1 }
  ' README.md > string.plugin.zsh

# run clitests
zsh -f -- =clitest --list-run --progress dot --color always --prompt '%' README.md
